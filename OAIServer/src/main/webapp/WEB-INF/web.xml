<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>OAIServer</display-name>
	<filter>
		<filter-name>JpaFilterOAI</filter-name>
		<filter-class>eu.apenet.oaiserver.config.JpaFilterOAI</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JpaFilterOAI</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>UTF8ResponseFilterOAI</filter-name>
		<filter-class>eu.apenet.oaiserver.config.UTF8ResponseFilterOAI</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UTF8ResponseFilterOAI</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>oaiServlet</servlet-name>
		<servlet-class>eu.apenet.oaiserver.OAIServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>oaiServlet</servlet-name>
		<url-pattern>/oai</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>eu.apenet.oaiserver.config.JpaListenerOAI</listener-class>
	</listener>
	<listener>
		<listener-class>eu.apenet.oaiserver.config.APEConfigListenerOAI</listener-class>
	</listener>
</web-app>