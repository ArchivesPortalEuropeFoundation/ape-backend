<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %C:%L - %m%n" />
		</layout>
	</appender>
	<appender name="file" class="eu.archivesportaleurope.commons.logging.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/files.log" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %C{1}:%L - %m%n" />
		</layout>
	</appender>
	<appender name="all" class="eu.archivesportaleurope.commons.logging.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/files-error.log" />
		<param name="Threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %C{1}:%L - %m%n" />
		</layout>
	</appender>
	
	<logger name="eu">
		<level value="info" />
		<appender-ref ref="file" /> 
	</logger>		
	<root>
		<priority value="WARN" />
		<appender-ref ref="all" />
	</root>
</log4j:configuration>
