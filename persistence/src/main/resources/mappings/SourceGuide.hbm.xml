<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="eu.apenet.persistence.vo.SourceGuide" table="source_guide" schema="public">
        <id name="id" type="int">
            <column name="sg_id" />
            <generator class="increment" />
        </id>
        <many-to-one name="fileState" class="eu.apenet.persistence.vo.FileState" fetch="select">
            <column name="fs_id" not-null="true" />
        </many-to-one>
        <many-to-one name="archivalInstitution" class="eu.apenet.persistence.vo.ArchivalInstitution" fetch="select">
            <column name="ai_id" not-null="true" />
        </many-to-one>
        <many-to-one name="uploadMethod" class="eu.apenet.persistence.vo.UploadMethod" fetch="select">
            <column name="um_id" not-null="true" />
        </many-to-one>
        <property name="aiId" type="int" insert="false" update="false">
            <column name="ai_id"/>
        </property>    
        <property name="title" type="text">
            <column name="title" not-null="true" />
        </property>
        <property name="uploadDate" type="timestamp">
            <column name="upload_date" length="13" not-null="true" />
        </property>
        <property name="pathApenetead" type="string">
            <column name="path_apenetead" length="255" not-null="true" />
        </property>
        <property name="eadid" type="string">
            <column name="eadid" length="255" />
        </property>
        <property name="totalNumberOfDaos" column="totalnumberofdaos" />
        <property name="totalNumberOfUnits" column="totalnumberofunits" />
        <property name="totalNumberOfUnitsWithDao" column="totalnumberofunitswithdao" />

        <set name="indexQueues" inverse="true" lazy="true" table="index_queue" fetch="select">
            <key>
                <column name="sg_id" />
            </key>
            <one-to-many class="eu.apenet.persistence.vo.IndexQueue" />
        </set>
        <set name="warningses" inverse="true" lazy="true" table="warnings" fetch="select">
            <key>
                <column name="sg_id" />
            </key>
            <one-to-many class="eu.apenet.persistence.vo.Warnings" />
        </set>

        <set name="eadContents" inverse="true" lazy="true" table="ead_content" fetch="select">
            <key>
                <column name="sg_id" not-null="false" />
            </key>
            <one-to-many class="eu.apenet.persistence.vo.EadContent" />
        </set>
    </class>
</hibernate-mapping>
